{
  "$schema": "https://gofastmcp.com/public/schemas/fastmcp.json/v1.json",
  "source": {
    "type": "filesystem",
    "path": "crawler_mcp/server.py",
    "entrypoint": "mcp"
  },
  "environment": {
    "type": "uv",
    "python": "==3.11.*",
    "project": ".",
    "editable": ["."]
  },
  "deployment": {
    "transport": "http",
    "host": "0.0.0.0",
    "port": 8010,
    "path": "/mcp",
    "log_level": "DEBUG",
    "env": {
      "ENV": "development",
      "DEBUG": "true"
    }
  }
}
