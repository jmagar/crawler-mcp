# Crawler-MCP environment configuration (example)
# Copy to `crawler_mcp/.env` and customize. Do NOT commit real secrets.

# -----------------------------
# Server
# -----------------------------
SERVER_HOST=127.0.0.1
SERVER_PORT=8010
DEBUG=false
LOG_LEVEL=INFO

# -----------------------------
# Qdrant (Vector DB)
# -----------------------------
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION=crawlerr_documents
QDRANT_VECTOR_SIZE=1024
QDRANT_DISTANCE=cosine
QDRANT_TIMEOUT=10.0
QDRANT_RETRY_COUNT=3
QDRANT_CONNECTION_POOL_SIZE=32
QDRANT_BATCH_SIZE=256
QDRANT_PREFETCH_SIZE=2048
QDRANT_SEARCH_EXACT=false

# -----------------------------
# HF Text Embeddings Inference (TEI)
# -----------------------------
TEI_URL=http://localhost:8080
TEI_MODEL=Qwen/Qwen3-Embedding-0.6B
TEI_TIMEOUT=30.0
TEI_MAX_CONCURRENT_REQUESTS=256
TEI_MAX_BATCH_TOKENS=32768
TEI_TOKENS_PER_ITEM=30
TEI_BATCH_SIZE=512

# -----------------------------
# Embedding Parameters
# -----------------------------
EMBEDDING_MAX_LENGTH=32000
EMBEDDING_DIMENSION=1024
EMBEDDING_NORMALIZE=true
EMBEDDING_MAX_RETRIES=3

# -----------------------------
# Optimized Crawler (from optimized_config)
# -----------------------------
# Core controls
OPTIMIZED_CRAWLER_MAX_URLS=1000
OPTIMIZED_CRAWLER_MAX_CONCURRENT=16
OPTIMIZED_CRAWLER_AGGRESSIVE_MODE=false
OPTIMIZED_CRAWLER_HEADLESS=true
OPTIMIZED_CRAWLER_TEXT_MODE=true
OPTIMIZED_CRAWLER_JAVASCRIPT=true
OPTIMIZED_CRAWLER_ALLOWED_LOCALES=en
OPTIMIZED_CRAWLER_PROGRESS=true
OPTIMIZED_CRAWLER_SEARCH_TOPK=5

# TEI (optimized path)
OPTIMIZED_CRAWLER_EMBEDDINGS=true
OPTIMIZED_CRAWLER_TEI_ENDPOINT=http://localhost:8080
OPTIMIZED_CRAWLER_TEI_MODEL=Qwen3-0.6B
OPTIMIZED_CRAWLER_TEI_PARALLEL=4
OPTIMIZED_CRAWLER_TEI_TIMEOUT_S=15
OPTIMIZED_CRAWLER_TEI_MAX_CONCURRENT=32
OPTIMIZED_CRAWLER_TEI_MAX_CLIENT_BATCH=128
OPTIMIZED_CRAWLER_TEI_MAX_BATCH_TOKENS=163840
OPTIMIZED_CRAWLER_TEI_CHARS_PER_TOKEN=4.0
OPTIMIZED_CRAWLER_TEI_MAX_INPUT_CHARS=0

# Qdrant (optimized path)
OPTIMIZED_CRAWLER_QDRANT=true
OPTIMIZED_CRAWLER_QDRANT_URL=http://localhost:6333
OPTIMIZED_CRAWLER_QDRANT_COLLECTION=crawler_pages
OPTIMIZED_CRAWLER_QDRANT_BATCH=128
OPTIMIZED_CRAWLER_QDRANT_PARALLEL=2
OPTIMIZED_CRAWLER_QDRANT_WAIT=true
OPTIMIZED_CRAWLER_QDRANT_API_KEY=

# Discovery and rate limiting
OPTIMIZED_CRAWLER_DISCOVERY_TIMEOUT=10
OPTIMIZED_CRAWLER_CHECK_ROBOTS_TXT=false
OPTIMIZED_CRAWLER_USE_RATE_LIMITING=false
OPTIMIZED_CRAWLER_RESPECT_CRAWL_DELAY=false

# Reranking (optional)
OPTIMIZED_CRAWLER_RERANK=false
OPTIMIZED_CRAWLER_RERANK_ENDPOINT=
OPTIMIZED_CRAWLER_RERANK_MODEL=
OPTIMIZED_CRAWLER_RERANK_TOPK=5

# GitHub (webhook/PR tools)
GITHUB_TOKEN=
REPOS_TO_TRACK=*
